<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class=col-lg-7">
      <ul>
        <li><%= t('tasks.index.task_name') %></li>
        <li><%= form_with(model: Task.new, method: :get, local: true, url:tasks_path) do |form| %>
        <%= form.text_field :name %></li>
        <li><%=t('tasks.index.status_search') %></li>
        <li><%= form.select :search_status, Task.statuses.keys.to_a, { include_blank:'選択してください'} %>
        <%= form.submit t("tasks.index.search"), name: nil %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<table>
  <thead>
    <tr>
      <th><%= t '.name' %></th>
      <th><%= t '.content' %></th>
      <th><%= t '.created_at' %></th>
      <th><%= link_to '終了期限でソートする', tasks_path(sort_expired: "true") %></th>
      <th>ステータス</th>
      <th><%= link_to '優先度', tasks_path(sort_priority_high: "true") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr class="task_list">
        <td><%= task.name %></td>
        <td><%= task.content %></td>
        <td><%= task.created_at %></td>
        <td><%= task.deadline %></td>
        <td><%= task.status %></td>
        <td><%= task.priority %></td>
        <td><%= link_to t("tasks.index.link_to.Show"), task %></td>
        <td><%= link_to t("tasks.index.link_to.Edit"), edit_task_path(task) %></td>
        <td><%= link_to t("tasks.index.link_to.Destroy"), task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<button type ="button" class="btn btn-outline-primary"><%= link_to t("tasks.index.link_to.Create"), new_task_path %></button>
<br>

<div class="index_page">
  <%= paginate @tasks %>
</div>


